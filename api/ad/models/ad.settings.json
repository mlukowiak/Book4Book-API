{
  "kind": "collectionType",
  "collectionName": "ads",
  "info": {
    "name": "Ad"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "date": {
      "type": "datetime",
      "required": true
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "ads"
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": true
    },
    "localization": {
      "type": "string",
      "required": true
    },
    "delivery": {
      "type": "string"
    },
    "description": {
      "type": "richtext"
    },
    "book": {
      "model": "book",
      "via": "ads"
    },
    "distance": {
      "type": "integer",
      "default": 0
    }
  }
}
